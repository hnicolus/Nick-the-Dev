@page "/profile"


<div class="container p-5">
    <div class="info p-5">
        <div class="row my-3">
            <div class="col-12 col-md-4 text-center">
                <img src="img/Profile.jpg" alt="Raised circle image" class="img-fluid rounded-circle shadow-lg" style="width: 180px;">
            </div>
            <div class="col-12 col-md-8 d-flex flex-column align-items-center align-items-lg-start">
                <div class="d-flex flex-row align-items-start mt-3 mt-lg-0">
                    <div class="name">
                        <h2 class="mb-0">Nick the Dev</h2>
                    </div>
                    <a href="#a" class="btn btn-primary btn-pill btn-sm ml-3 mt-1">Follow</a>
                    <a href="#a" class="btn btn-success btn-pill btn-sm ml-3 mt-1">Resume</a>
                    <a href="#a" class="btn btn-outline-info btn-pill btn-sm ml-3 mt-1">Contact</a>
                </div>
                <div class="stats d-flex flex-row align-items-center my-3 align-items-lg-start text-center text-lg-left">
                    <div class="posts ml-2 ml-lg-0"><p class="lead"><b>134</b> posts</p></div>
                    <div class="posts"><p class="lead"><b>6.6m</b> followers</p></div>
                    <div class="posts"><p class="lead"><b>201</b> following</p></div>
                </div>
                <p class="lead mb-0 mt-2"><b>Nicolas Hlulani Maluleke</b></p>
                <p class="lead text-center text-lg-left">I am a C# developer freelance and I specialise in .Net framework.
                I spend most of my time learning better ways of programming 
                and Developing reliable software. I am a full-time Computer Science student at the Unversity of Johannesburg.</p>
            </div>
        </div>
    </div>
    <div class="navigation d-flex justify-content-center">
        <ul class="nav nav-primary nav-tabs mt-3 d-flex flex-column flex-md-row">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#photos">
                    <i class="fas fa-th"></i> Photos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#saved">
                    <i class="far fa-bookmark"></i> Saved
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#tagged">
                    <i class="far fa-id-badge"></i> Tagged
                </a>
            </li>
        </ul>
    </div>
    <div class="profile-tabs tab-content">
        <div class="tab-pane fade show active" id="photos">
            <div class="row">
                <div class="col-12 col-md-4">
                    <div class="square" style="background-image:url('img/dog-4.jpg');"></div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="square" style="background-image:url('img/dog-5.jpg');"></div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="square" style="background-image:url('img/dog-6.jpg');"></div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="square" style="background-image:url('img/dog-7.jpg');"></div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="square" style="background-image:url('img/dog-8.jpg');"></div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="square" style="background-image:url('img/dog-3.jpg');"></div>
                </div>
            </div>
            <div class="d-flex justify-content-center my-5">
                <a href="#a" class="btn btn-outline-primary btn-pill">Load More</a>
            </div>
        </div>
        <div class="tab-pane fade text-center" id="saved">

            <p class="lead"><span class="text-danger"><i class="far fa-frown-open"></i></span> Nothing saved yet.</p>
        </div>
        <div class="tab-pane fade text-center" id="tagged">
            <p class="lead">Help people tag you.</p>
            <a href="#a" class="btn btn-info btn-pill">Find Friends</a>
        </div>
    </div>

</div>

<BottomFooter></BottomFooter>
